<%= form_tag('/ingredients') do %>
	<% 20.times do |i| %>
		<%= label_tag "Name" %>
		<%= text_field_tag "name#{i}" %>

		<%= label_tag "Amount" %>
		<%= number_field_tag "amount#{i}" %>

		<%= label_tag "Unit" %>
		<%= text_field_tag "unit#{i}" %>
		<br>
	<% end %>

	<%= hidden_field_tag :recipe_id, params[:id] %>
	<%= submit_tag "Add ingredients" %>
<% end %>