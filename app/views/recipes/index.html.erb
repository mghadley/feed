<h1>Feed</h1>
<% @recipes.each do |recipe| %>
	<div>
		<h2><%= link_to recipe.name, recipe_path(recipe) %></h2>
		<div>Time needed: <%= recipe.duration %></div>
		<div>Difficulty: <%= recipe.difficulty %></div>
		<div>Category: <%= recipe.category %></div>
		<div>Type: <%= recipe.food_type %></div>
		<h3>Instructions: </h3>
		<%= recipe.instructions %>
	</div>
	<div>
		<h3>Ingredients</h3>
		<% recipe.ingredients.each do |i| %>
			<%= i.measurements.find_by(recipe_id: recipe.id).amount %>
			<%= i.measurements.find_by(recipe_id: recipe.id).unit %>
			<%= i.name %>
			<br>
		<% end %>
	</div>

<hr/>

<div>
	<h2>Trending Recipes</h2>
	<% @trending.each do |recipe| %>
		<h1><%= link_to recipe.name, recipe_path(recipe) %></h1>

		<span>Duration:</span>
		<span> <%= recipe.duration %> </span>
		<br />

		<span>Difficulty:</span>
		<span> <%= recipe.difficulty %> </span>
		<br />

		<span>Category:</span>
		<span> <%= recipe.category %> </span>
		<br />

		<span>Food Type:</span>
		<span> <%= recipe.food_type %> </span>
		<br />
		
	<% end %>
</div>





<h1>Suggested</h1>


<%= commontator_thread(recipe) %>

<% end %>

