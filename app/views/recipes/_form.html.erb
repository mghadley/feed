
<%= form_for @recipe do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>

	<%= f.label :duration %>
  <%= f.time_select :duration %>

  <%= f.label :difficulty %>
  <%= f.select :difficulty %>

  <%= f.label :category %>
  <%= f.select :category %>

  <%= f.label :food_type %>
  <%= f.select :food_type %>

  <%= f.text :instructions %>
  <%= f.text_area :instructions %>

<%= f.submit %>

<% end %>
