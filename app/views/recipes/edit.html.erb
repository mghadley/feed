<h1>Edit Recipe: </h1>

<%= render(partial: 'form') %>

<% @recipe.ingredients.each do |i| %>
	<% measurement = i.measurements.find_by(recipe_id: @recipe.id) %>
	<%= i.name %>
	<%= measurement.amount %>
	<%= measurement.unit %>
	<%= link_to 'Delete', ingredients_path(measurement_id: measurement.id), method: :delete %>
<% end %>

<%= link_to "Back", recipes_path %>


